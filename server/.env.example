# Database Configuration
# For MySQL (production):
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ecommerce_db

# For local development with SQLite, leave DB fields blank or comment them out
# DB_USER=
# DB_PASSWORD=
# DB_HOST=
# DB_PORT=
# DB_NAME=

# Application Settings
DEBUG=True

# JWT Settings
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI API (optional - for RAG/LLM features)
OPENAI_API_KEY=your-openai-api-key

# Ollama Settings (optional - for local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# LangChain/LangSmith (optional - for LLM observability)
LANGCHAIN_TRACING_V2=false
LANGSMITH_API_KEY=your-langsmith-key